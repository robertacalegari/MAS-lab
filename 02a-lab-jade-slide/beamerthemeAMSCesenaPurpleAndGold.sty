\mode<presentation>
%
\setbeamertemplate{navigation symbols}{}
%
\useoutertheme{infolines}
\useinnertheme[shadow=true]{rounded}
%%% TO UNCOMMENT FOR LOCAL DIR
\usecolortheme{cesenapurpleandgold}
%% Alma Logo
\pgfdeclareimage[width=\paperwidth]{bg}{res/img/almacesena-background}
\setbeamertemplate{background}{\pgfuseimage{bg}}
% text
\setbeamercolor{normal text}{fg=cesenapurple!10!black}
\setbeamercolor{alerted text}{fg=cesenapurple!90!black}
\setbeamercolor{quote}{fg=cesenapurple!80!white}
% bullets
\setbeamercolor*{item}{fg=gold(metallic)}
% front page
\setbeamercolor{title}{fg=cesenapurple!90!black}
\setbeamercolor{subtitle}{fg=cesenapurple!90!white}
\setbeamercolor{author}{fg=gold(metallic)!90!black}
\setbeamercolor{institute}{fg=cesenapurple!75!black}
\setbeamercolor{date}{fg=cesenapurple!75!white}
% block header
\setbeamercolor{block title}{use=structure,fg=palegoldenrod!90!white,bg=cesenapurple!55!black}
\setbeamercolor{block title alerted}{use=alerted text,fg=palegoldenrod!50!white,bg=cesenapurple!35!black}
\setbeamercolor{block title example}{use=example text,fg=cesenapurple!30!black,bg=cesenapurple!30!white}
% block body
\setbeamercolor{block body}{parent=normal text,use=block title,bg=cesenapurple!2!white}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=cesenapurple!5!white}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=cesenapurple!7!white}
% table of content
\setbeamercolor{section in toc}{fg=cesenapurple!40!black}
\setbeamercolor{subsection in toc}{fg=cesenapurple!50!black}
% footnote
\setbeamercolor{footnote mark}{fg=gold(metallic)!90!black}
\setbeamercolor{footnote}{fg=cesenapurple!25!gray}
% biblio
\setbeamercolor{bibliography entry author}{fg=gold(metallic)!75!black}
\setbeamercolor{bibliography entry title}{fg=cesenapurple!90!black} 
\setbeamercolor{bibliography entry location}{fg=cesenapurple!50!black} 
\setbeamercolor{bibliography entry note}{fg=cesenapurple!75!black}  
% abstract
\setbeamercolor*{abstract title}{fg=cesenapurple}
\setbeamerfont*{abstract title}{family=\sffamily}
\setbeamercolor*{abstract}{fg=purple!50!black}
\setbeamerfont*{abstract}{family=\rmfamily,size=\small}
% Citation
\newcommand{\ccite}[1]{{\textcolor{gold(metallic)!90!black}{\scriptsize\cite{#1}}}}
\newcommand{\cccite}[1]{{\textcolor{palegoldenrod!80!black}{\scriptsize\cite{#1}}}}
% URL
\newcommand{\uurl}[1]{{\textcolor{gold(metallic)!75!black}{\scriptsize\url{#1}}}}
\newcommand{\uuurl}[1]{{\textcolor{palegoldenrod!80!black}{\scriptsize\url{#1}}}}
% emph 
\renewcommand{\emph}[1]{\textcolor{cesenapurple!50!black}{\textit{#1}}}
% alert 
%\renewcommand{\alert}[1]{\textcolor{cesenapurple!90!black}{#1}}
\newcommand{\aalert}[1]{\textcolor{palegoldenrod!90!black}{\it#1}}

\mode
<all>
